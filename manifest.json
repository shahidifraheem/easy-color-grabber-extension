{
    "name": "Easy Color Grabber - Smart Color Picker",
    "version": "1.0",
    "description": "Instantly capture, convert, and copy colors from any webpage with one click, plus a color history for your workflow.",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_title": "Easy Color Grabber",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "32": "assets/icons/icon32.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "assets/js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/js/content.js"
            ]
        }
    ],
    "icons": {
        "16": "assets/icons/icon16.png",
        "32": "assets/icons/icon32.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    }
}